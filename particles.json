<!-- Partikel-Hintergrund -->
<div id="particles-js"></div>

<!-- Optional: Partikel-Anzahl anzeigen -->
<div class="count-particles">
  <span class="js-count-particles">--</span> particles
</div>

<!-- Particles.js Bibliothek über HTTPS -->
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>

<!-- Initialisierung -->
<script>
  // Hintergrundfarbe über CSS setzen
  document.body.style.background = "linear-gradient(to bottom, #b3cfff, #d6c4ff)"; // hellblau-lila Verlauf

  particlesJS('particles-js', {
    "particles": {
      "number": { "value": 80, "density": { "enable": true, "value_area": 800 } },
      "color": { "value": "#ffffff" }, // Partikelfarbe weiß
      "shape": { "type": "circle" },
      "opacity": { "value": 0.7 },
      "size": { "value": 3 },
      "line_linked": {
        "enable": true,
        "distance": 150,
        "color": "#ffffff",
        "opacity": 0.4,
        "width": 1
      },
      "move": {
        "enable": true,
        "speed": 2,
        "direction": "none",
        "random": false,
        "straight": false,
        "out_mode": "out"
      }
    },
    "interactivity": {
      "detect_on": "canvas",
      "events": {
        "onhover": { "enable": true, "mode": "repulse" },
        "onclick": { "enable": true, "mode": "push" },
        "resize": true
      },
      "modes": {
        "repulse": { "distance": 100 },
        "push": { "particles_nb": 4 }
      }
    },
    "retina_detect": true
  });

  // Partikel-Zähler (optional)
  setInterval(() => {
    const countElem = document.querySelector('.js-count-particles');
    if (window.pJSDom && window.pJSDom[0]) {
      countElem.textContent = window.pJSDom[0].pJS.particles.array.length;
    }
  }, 1000);
</script>
